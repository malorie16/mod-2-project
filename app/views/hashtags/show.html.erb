<div class="hashtag_posts">
<h1><%=@hashtag.name%></h1>
<% @hashtag.posts.reverse.each do |post|%>
  <h3> <%= link_to post.user.name.capitalize, user_path(post.user) %></h3>
  <h4 class="post-title"><%= post.title %></h4>
  <%= image_tag post.image.url(:medium), :class => "pics" %>
<% end %>
</div>
