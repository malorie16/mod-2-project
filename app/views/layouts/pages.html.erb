<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <title>Mod2ProjectInstaclone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'pages', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <ul class='menu'>
        <% if current_user %>
          <li><i class="fas fa-sign-out-alt" id="menu-align-right"><%=link_to 'Logout', logout_path, method: :delete %></i></li>

          <li><i class="fas fa-user-circle" id="menu-align-right"></i><%= link_to 'Profile', user_path(current_user) %></li>

          <li><i class="far fa-edit" id="menu-align-right"><a href="/posts/new"></i>Create Post</a></li>
        <% end %>

        <li><i class="fas fa-home" id="menu-align-right"></i><a href="/posts">Home</a></li>

      </ul>

    </header>

    <body>
    <%= yield %>

  </body>
</html>
